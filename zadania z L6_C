#!/usr/bin/env python3
def rek(n):
    if n == 1:       #Zad 3 a)
        return 1
    return n**2 + rek(n - 1)


def sziter(n):      #zad 3 b)
    w = 1
    for i in range(2, n + 1):
        w += i ** 2
    return w


#zad3 c)
def suman(n):
    return (n*(n + 1)*(2*n + 1)) // 6


